<div class="container-fluid d-flex justify-content-center flex-column">
    <div class="container mt-2">
        <div class="card w-100">
            <div class="card-header">
                {{title}}
                <div class="float-end">Created by: {{user.username}} at {{created_at}} </div>
            </div>
            <div class="card-body">
                <p class="card-text">{{content}}</p>
            </div>
        </div>
        <div class="card w-100">
            <p class="card-text"></p>
        </div>
        <button type="button" id="newPostBtn" class="btn btn-secondary btn-sm w-25 m-auto">Add a comment +</button>
    </div>
</div>

<script src="/js/comments.js"></script>